
public class AsteriscosVersion4 {
	public static void main(String []args) {
		Rombo(2);
	}

	private static void Rombo(int i) {
		int num=i;
		if(i==0) {
			return;
		}
		else {
			while(i>0) {
				System.out.print("*");
				i--;
			}
		System.out.println("");
		Rombo(num-1);
		System.out.println("");
		Rombo(num-1);
		}
	}
}
